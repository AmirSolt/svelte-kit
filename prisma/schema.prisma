generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Config {
  id ConfigType @id

  rating_weight  Float  @default(1)
  total_ratings_weight  Float  @default(1)
  price_weight  Float  @default(1)

  categorizer_system_message String @default("You are a virtual assistant on facebook messenger. Help the customer with prompts. Keep your responses very short, below 200 charachters.")
  categorizer_temperature    Float  @default(1)

  top_products_count Int  @default(15)
  disclaimer_repeat_message_count Int  @default(150)
  message_char_limit Int  @default(250)
  load_message_to_client_count Int  @default(10)
}

model Profile {
  id              String    @id @default(uuid())
  created_at      DateTime  @default(now())
  fb_messenger_id String    @unique
  country_code         String?
  messages        Message[]
  tickets         Ticket[]
  searches        Search[]

  @@index(fields: [fb_messenger_id], type: Hash)
}

model Message {
  id          String      @id @default(uuid())
  created_at  DateTime    @default(now())
  content     String?
  profile     Profile     @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id  String
  message_dir MessageDir
  role        MessageRole
  extra_json  Json?
  image_urls  String[]

  @@index(fields: [created_at], type: BTree)
}

model Ticket {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  content    String
  profile    Profile  @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id String
}

model Search {
  id          String   @id @default(uuid())
  search_term String
  profile     Profile  @relation(fields: [profile_id], references: [id], onDelete: Cascade)
  profile_id  String
  asins       String[]
  search_url String
  search_results Json
}

enum MessageRole {
  NON_AI
  SYSTEM
  USER
  ASSISTANT
  TOOL
}

enum MessageDir {
  INBOUND
  OUTBOUND
}

enum ConfigType {
  FREE
  TIER_ONE
}

enum Country {
  US
  CA
  UK
}
